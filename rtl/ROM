module ROM(
	input wire [3:0] addr,
	output reg [31:0] data
);

	always@(*) begin
		case(addr)
			4'd0	: data = 32'h42340000;	//45.00000000°
			4'd1	: data = 32'h41d4853a;	//26.56505118°
			4'd2	: data = 32'h41609474;	//14.03624347°
			4'd3	: data = 32'h40e40022;	//7.12501635°
			4'd4	: data = 32'h4064e2aa;	//3.57633437°
			4'd5	: data = 32'h3fe51bca;	//1.78991060°
			4'd6	: data = 32'h3f652a1b;	//0.89517371°
			4'd7	: data = 32'h3e652e94;	//0.22381050°
			4'd8	: data = 32'h3ee52daf;	//0.44761417°
			4'd9	: data = 32'h3d652edc;	//0.05595289°
			4'd10	: data = 32'h3de52ece;	//0.11190568°
			4'd11	: data = 32'h3ce52ede;	//0.02797645°
			4'd12	: data = 32'h3be52ed9;	//0.00699411°
			4'd13	: data = 32'h3c652ee4;	//0.01398823°
			4'd14	: data = 32'h3b652eee;	//0.00349706°
			4'd15	: data = 32'h3ae52eee;	//0.00174853°
			default	: data = 32'h00000000; 	//default_value
		endcase
	end
endmodule
